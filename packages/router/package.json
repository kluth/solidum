{
  "name": "@sldm/router",
  "version": "0.1.0",
  "description": "Simple SPA router for Solidum applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo 'No tests yet'",
    "test:watch": "echo 'No tests yet'",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix"
  },
  "dependencies": {
    "@sldm/core": "^0.1.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "Matthias Kluth",
    "email": "matthias.kluth@prodot.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kluth/solidum.git"
  },
  "homepage": "https://kluth.github.io/solidum",
  "bugs": {
    "url": "https://github.com/kluth/solidum/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "solidum",
    "router",
    "spa",
    "routing"
  ]
}
