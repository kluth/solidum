{
  "name": "@solidum/store",
  "version": "0.1.0",
  "description": "Centralized state management for Solidum applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "tsx src/store.test.ts && tsx src/store-integration.test.ts",
    "test:watch": "tsx --watch src/store.test.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix"
  },
  "dependencies": {
    "@solidum/core": "^0.1.0"
  },
  "devDependencies": {
    "@solidum/testing": "workspace:*",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "Matthias Kluth",
    "email": "matthias.kluth@prodot.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kluth/solidum-store.git"
  },
  "homepage": "https://github.com/kluth/solidum-store#readme",
  "bugs": {
    "url": "https://github.com/kluth/solidum-store/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "solidum",
    "state",
    "store",
    "state-management"
  ]
}
