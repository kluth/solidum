{
  "name": "@solidum/testing",
  "version": "0.1.0",
  "description": "TDD-first testing framework for Solidum",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --loader tsx --test src/**/*.test.ts",
    "test:watch": "node --loader tsx --test --watch src/**/*.test.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "picocolors": "^1.0.0",
    "jsdom": "^23.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.0",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
