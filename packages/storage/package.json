{
  "name": "@sldm/storage",
  "version": "0.3.0",
  "description": "Unified storage abstraction for localStorage, sessionStorage, IndexedDB, and databases",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "tsx src/storage.test.ts && tsx src/database.test.ts && tsx src/indexeddb.test.ts",
    "test:storage": "tsx src/storage.test.ts",
    "test:database": "tsx src/database.test.ts",
    "test:indexeddb": "tsx src/indexeddb.test.ts",
    "test:watch": "tsx --watch src/storage.test.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@sldm/testing": "workspace:*",
    "@types/node": "^20.11.0",
    "fake-indexeddb": "^6.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "Matthias Kluth",
    "email": "matthias.kluth@prodot.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kluth/solidum.git"
  },
  "homepage": "https://kluth.github.io/solidum",
  "bugs": {
    "url": "https://github.com/kluth/solidum/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "solidum",
    "storage",
    "localStorage",
    "sessionStorage",
    "indexeddb",
    "database",
    "abstraction"
  ]
}
