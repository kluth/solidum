{
  "name": "@sldm/debug",
  "version": "0.3.0",
  "description": "Comprehensive debugging utilities for Solidum applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./formatters": {
      "import": "./dist/formatters/index.js",
      "types": "./dist/formatters/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "tsx src/ai-debugger.test.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sldm/core": "workspace:*"
  },
  "peerDependencies": {
    "@sldm/web-ai": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@sldm/web-ai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@sldm/testing": "workspace:*",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "solidum",
    "debug",
    "logger",
    "tracing",
    "monitoring"
  ],
  "author": "Matthias Kluth",
  "license": "MIT"
}
