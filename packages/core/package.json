    "test:watch": "tsx --watch src/reactive/atom.test.ts src/reactive/computed.test.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@solidum/testing": "workspace:*",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
